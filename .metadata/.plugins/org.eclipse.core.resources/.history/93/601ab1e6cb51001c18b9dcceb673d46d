package classpart07;

public class ClassEx07 {
	// 멤버변수
	String[]arAcc = {"1111","2222","3333","4444","5555"};
	String[]arPw = {"1234","2345","3456","4567","5678"};
	int[] arMoney = {87000,34000,17500,98000,12500};
	int count = 5;
	
	// 3333 로그인 중
	int loginCheck = 2;
	
	//생성자
	public ClassEx07() {
		System.out.println("-------------------------");
		System.out.println("계좌번호   비밀번호   계좌잔액");
		System.out.println("-------------------------");
		for(int i=0;i<arAcc.length;i++) {
			System.out.println(arAcc[i]+"    "+arPw[i]+"    "+arMoney[i]);
		}
		System.out.println("-------------------------");
		System.out.println("상태 : "+arAcc[loginCheck]+" 로그인");
		System.out.println("-------------------------");
	}
	//메서드
	public void logIn() {
		
	}
}
